#!/bin/bash

build() {
  add_runscript
}

help() {
cat<<HELP
  Mounts a subdirectory of the filesystem as the actual root filesystem. Use
  kernel parameter "rootsubdir" to specify the subdirectory. A leading slash
  (/) is allowed but not necessary.

  Example:
  rootsubdir=os/arch
HELP
}

